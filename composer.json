{
    "name": "axn/livewire-upload-handler",
    "description": "Modern file upload handler for Livewire 3 with chunked uploads, image previews, and Spatie Media Library integration",
    "keywords": ["laravel", "livewire", "upload", "file-upload", "media-library", "spatie", "chunked-upload", "glide"],
    "homepage": "https://github.com/AXN-Informatique/livewire-upload-handler",
    "support": {
        "issues": "https://github.com/AXN-Informatique/livewire-upload-handler/issues",
        "source": "https://github.com/AXN-Informatique/livewire-upload-handler"
    },
    "authors": [
        {
            "name": "AXN Informatique",
            "email": "developpement@axn.fr"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "axn/laravel-glide": "^3.0",
        "laravel/framework": "^12.0",
        "livewire/livewire": "^3.1",
        "spatie/laravel-medialibrary": "^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.25.1",
        "driftingly/rector-laravel": "^2.1.3",
        "rector/rector": "^2.2.8"
    },
    "autoload": {
        "psr-4": {
            "Axn\\LivewireUploadHandler\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Axn\\LivewireUploadHandler\\ServiceProvider"
            ]
        }
    },
    "config" : {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability" : "dev",
    "prefer-stable" : true
}
